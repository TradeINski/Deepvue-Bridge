{
  "manifest_version": 3,
  "name": "Deepvue Bridge",
  "version": "1.5",
  "description": "Extension that formats Deepvue tickers with commas for clipboard.",
  "permissions": [
    "clipboardWrite",
    "activeTab",
    "storage",
    "windows"
  ],
  "host_permissions": [
    "https://app.deepvue.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Deepvue Bridge",
    "default_icon": {
      "16": "Images/db_icon-16.png",
      "32": "Images/db_icon-32.png",
      "48": "Images/db_icon-48.png",
      "128": "Images/db_icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://app.deepvue.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
      "16": "Images/db_icon-16.png",
     "32": "Images/db_icon-32.png",
     "48": "Images/db_icon-48.png",
     "128": "Images/db_icon-128.png"
  }
}